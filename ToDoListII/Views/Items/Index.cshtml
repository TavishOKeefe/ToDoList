@using ToDoListII.Models;

<!DOCTYPE html>
<html>
    <head>
        <title>ToDoListII</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
            <h1>To Do List</h1>
            <ul>
              @if (Model.Count == 0)
              {
                <p>You have no items in your to do list!</p>
              }
              @if(Model.Count != 0)
              {
                @foreach (Item item in Model)
                {
                    <li><a href='/items/@item.GetId()'>@item.GetDescription()</a></li>
                }
              }


            </ul>
            <a href="/items/new">Add a new task</a>

            <form class="" action="/items/delete" method="post">
              <button type="submit" name="button">Clear All Tasks</button>
            </form>

        </div>
    </body>
</html>
